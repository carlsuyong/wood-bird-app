/* banner */

.container {
  position: relative;
  margin: 0;
  padding: 30rpx;
  height: 100%;
  border-top: 1px solid #e6e6e6;
}

.index-container {
  width: 100%;
  height: 550rpx;
  position: relative;
  border-bottom: 1px solid #e6e6e6;
}

.bg-img {
  width: 100%;
  position: absolute;
}

/* 搜索 */

.index-search {
  width: 600rpx;
  position: absolute;
  left: 45rpx;
  top: 320rpx;
  background-color: white;
  height: 100rpx;
}

.search-img {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 30rpx;
  left: 20rpx;
}

.index-search>.input {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-left: 80rpx;
  font-size: 28rpx;
  display: block;
  line-height: 100rpx;
  color: #bbb;
}

.label-img {
  position: absolute;
  width: 360rpx;
  height: 130rpx;
  top: 395rpx;
  left: 80rpx;
}

/* 396做城市 */

.index-396 {
  width: 100%;
  margin-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #e6e6e6;
}

.index-label {
  overflow: hidden;
  height: 60rpx;
}

.index-title {
  float: left;
  line-height: 60rpx;
  font-size: 38rpx;
  font-weight: bold;
  color: #3e3e3e;
}

.search-jian {
  float: right;
  width: 45rpx;
  height: 45rpx;
  margin-top: 7rpx;
}

/* 轮播 */

.join-swiper {
  height: 210rpx;
  margin-top: 30rpx;
}

.index-add-img {
  width: 310rpx;
  height: 210rpx;
}

/* 标签 */

.index-font-label {
  overflow: hidden;
  margin-top: 20rpx;
}

.index-font {
  display: block;
  width: 138rpx;
  float: left;
  font-size: 35rpx;
  font-weight: bold;
  text-align: center;
  color: #3e3e3e;
  padding: 10rpx 0;
}

.index-all {
  color: #ff9180;
  border-bottom: 2px solid #ff9180;
}

/* 秋日私语 */

.join-swipers {
  height: 395rpx;
  margin-top: 30rpx;
}

.join-swipers .index-add-img {
  width: 380rpx;
  height: 240rpx;
}
.index-intor{
  box-sizing: border-box;
  padding-left: 10rpx;
}
.index-intor>span {
  display: block;
  margin: 8rpx 0;
}

.index-top1 {
  font-size: 32rpx;
  font-weight: bold;
}

.index-top2 {
  font-size: 28rpx;
}

.index-top3 {
  font-size: 28rpx;
  color: #bbb;
  margin-top: 15rpx !important;
}

/* 独有千秋 */

.index-width {
  width: 600rpx !important;
}

swiper-item {
  overflow: hidden;
}

.index-bigimg {
  width: 290rpx;
  height: 400rpx;
  float: left;
}

.index-smallimg {
  width: 200rpx;
  height: 400rpx;
  float: left;
  margin-left: 20rpx;
}

.index-add-img1, .index-add-img2 {
  width: 250rpx;
  height: 200rpx;
}

/* 数据 */
.index-data{
  padding: 30rpx 0;
  width: 100%;
}
.index-data-list{
  height: 100rpx;
  overflow: hidden;
  margin: 25rpx 0;
}
.index-icon{
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
  float: left;
}
.index-list{
  float: left;
  margin-left: 30rpx;
}
.index-num{
  height: 60rpx;
  line-height: 60rpx;
  display: block;
  font-size: 40rpx;
  font-weight: bold;
}
.index-text{
  display: block;
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #bbb;
}
/* 特价房源 */
.exjoin-swipers{
  height: 80rpx;
}
.label-box{
  width: 155rpx;
  height: 80rpx;
}
.index-intor{
  overflow: hidden;
}
.index-add-label{
  text-align: center;
  line-height: 80rpx;
  width: 155rpx;
  height: 80rpx;
  font-size: 26rpx;
  color: gray;
  background-color: #bbb;
  border-radius: 3px;
}

.active-label{
  background-color: #ff9180;
  color: white;
}
.fl{
  float: left;
}
.fr{
  float: right;
  margin-right: 30rpx !important;
  margin-top:8rpx !important
}
.ex-swipers{
  height: 350rpx;
