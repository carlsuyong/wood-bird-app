.container {
  height: 100%;
  /* display: flex;
  flex-direction: column;
  justify-content: space-between; */
  box-sizing: border-box;
}

/* 头部 */

.header {
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  background-color: rgb(240, 240, 240);
  z-index: 100;
}

.headerTab {
  float: left;
  width: 33.3%;
  height: 100%;
}

.headerTab>text {
  /* font-size: 32rpx; */
  display: block;
  text-align: center;
  margin: 0 auto;
  color: #666;
  /* padding: 24rpx 0; */
  box-sizing: border-box;
}

.activeClick {
  color: #ff9180 !important;
}

/* 空 */

.empty {
  height: 100rpx;
}

/* 筛选 */
.headerselect{
  padding-top: 10rpx;
  font-size: 30rpx;
}
.activeselect{
  font-size: 22rpx;
  padding-top: 5rpx;

}

/* 内容 */
.index-container {
  width: 100%;
  height: 490rpx;
  position: relative;
  border-bottom: 1px solid #e6e6e6;
  margin-top: 10rpx;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.bg-img {
  border-radius: 10rpx;
  width: 100%;
  height: 380rpx;
}
.task-title{
  overflow: hidden;
  font-size: 30rpx;
  width: 100%;
}
.forcetitle{
  width: 90%;
  float: left;
}
.force{
  width: 10%;
  float: right;
  text-align: right;
  color:#ff9180;
}
.city-adress{
  float: left;
  width: 100%;
  font-size: 22rpx;
  color: rgba(128, 128, 128, 0.603);
  margin-top: 5rpx;
  
}

.line-price{
  position: absolute;
  width: 690rpx;
  top: 285rpx;
}
.price{
  background-color:rgba(0, 0, 0, 0.5);
  color: white;
  display: block;
  float: left;
  width: 150rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx; 
}

.lineimg{
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  float: right;
  margin-right: 15rpx;
}
.tabs text{
  display: block;
  text-align: center;
  color: #666;
}